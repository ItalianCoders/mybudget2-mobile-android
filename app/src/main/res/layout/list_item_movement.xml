<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="java.text.NumberFormat"/>
        <import type="android.text.format.DateUtils"/>
        <import type="java.text.DateFormat"/>
        <import type="it.italiancoders.mybudget.databinding.converters.AmountStringConversion"/>
        <variable
                name="movement"
                type="it.italiancoders.mybudget.rest.models.Movement"/>
        <variable
                name="formattedAmount"
                type="String" />

    </data>
    <LinearLayout
            xmlns:bind="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/rootLayout"
            android:clickable="true"
            android:focusable="true">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

            <TextView
                    android:id="@+id/category_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{movement.category.name}"
                    bind:layout_constraintEnd_toEndOf="parent"
                    bind:layout_constraintTop_toTopOf="parent"
                    bind:layout_constraintStart_toStartOf="parent"
                    android:textAppearance="@style/TextAppearance.Medium"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/execute_at_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{DateFormat.getDateTimeInstance().format(movement.executedAtDate)}"
                    bind:layout_constraintEnd_toEndOf="@+id/amount_text_view"
                    bind:layout_constraintTop_toBottomOf="@+id/category_text_view"
                    bind:layout_constraintStart_toStartOf="parent"
                    android:textAppearance="@style/TextAppearance.Small"
                    android:textStyle="italic"/>

            <TextView
                    android:id="@+id/amount_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{AmountStringConversion.toString(context,movement.amount)}"
                    bind:layout_constraintEnd_toEndOf="parent"
                    bind:layout_constraintTop_toBottomOf="@+id/category_text_view"
                    android:textAppearance="@style/TextAppearance.Small"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/item_separator"
                    bind:layout_constraintTop_toBottomOf="@+id/execute_at_text_view"
                    bind:layout_constraintStart_toStartOf="parent"
                    bind:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</layout>